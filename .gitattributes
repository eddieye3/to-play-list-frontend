* text=auto

# Normalize to LF for source files
*.ts text eol=lf
*.tsx text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.json text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf

# Binary files
*.png -text
*.jpg -text
*.jpeg -text
*.gif -text
*.ico -text
*.pdf -text
*.woff -text
*.woff2 -text
*.ttf -text